<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".restaurant2">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="260dp" />

                <!-- Menu 1-->
                <androidx.cardview.widget.CardView
                    android:id="@+id/store2_menu1"
                    android:layout_width="match_parent"
                    android:layout_height="124dp"
                    android:layout_margin="10dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="15dp">

                    <ImageView
                        android:layout_width="107dp"
                        android:layout_height="114dp"
                        android:layout_margin="5dp"
                        android:background="@color/white"
                        android:elevation="3dp"
                        android:src="@drawable/store2_menu1" />

                    <TextView
                        android:id="@+id/menu_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="130dp"
                        android:paddingTop="5dp"
                        android:text="@string/store2_menu1_title"
                        android:textColor="@color/black"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="130dp"
                        android:paddingTop="30dp"
                        android:text="@string/store2_menu1_description" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="130dp"
                        android:paddingTop="90dp"
                        android:text="@string/store2_menu1_price" />

                    <ImageView
                        android:id="@+id/add_to_chart_21"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="330dp"
                        android:layout_marginTop="90dp"
                        app:srcCompat="@drawable/add_to_cart" />

                </androidx.cardview.widget.CardView>

                <!-- Menu 2-->
                <androidx.cardview.widget.CardView
                    android:id="@+id/store2_menu2"
                    android:layout_width="match_parent"
                    android:layout_height="124dp"
                    android:layout_margin="10dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="15dp">

                    <ImageView
                        android:id="@+id/add_to_chart_22"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="330dp"
                        android:layout_marginTop="90dp"
                        app:srcCompat="@drawable/add_to_cart" />

                    <ImageView
                        android:id="@+id/store2_menu2_profile"
                        android:layout_width="107dp"
                        android:layout_height="114dp"
                        android:layout_margin="5dp"
                        android:background="@color/white"
                        android:elevation="3dp"
                        android:src="@drawable/store2_menu2" />

                    <TextView
                        android:id="@+id/store1_menu2_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="130dp"
                        android:paddingTop="5dp"
                        android:text="@string/store2_menu2_title"
                        android:textColor="@color/black"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="130dp"
                        android:paddingTop="30dp"
                        android:text="@string/store2_menu2_description" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="130dp"
                        android:paddingTop="90dp"
                        android:text="@string/store2_menu2_price" />

                </androidx.cardview.widget.CardView>

                <!-- Menu 3-->
                <androidx.cardview.widget.CardView
                    android:id="@+id/store2_menu3"
                    android:layout_width="match_parent"
                    android:layout_height="124dp"
                    android:layout_margin="10dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="15dp">

                    <ImageView
                        android:id="@+id/add_to_chart_23"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="330dp"
                        android:layout_marginTop="90dp"
                        app:srcCompat="@drawable/add_to_cart" />

                    <ImageView
                        android:id="@+id/store2_menu3_profile"
                        android:layout_width="107dp"
                        android:layout_height="114dp"
                        android:layout_margin="5dp"
                        android:background="@color/white"
                        android:elevation="3dp"
                        android:src="@drawable/store2_menu3" />

                    <TextView
                        android:id="@+id/store2_menu3_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="130dp"
                        android:paddingTop="5dp"
                        android:text="@string/store2_menu3_title"
                        android:textColor="@color/black"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="130dp"
                        android:paddingTop="30dp"
                        android:text="@string/store2_menu3_description" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="130dp"
                        android:paddingTop="90dp"
                        android:text="@string/store2_menu3_price" />

                </androidx.cardview.widget.CardView>

                <!-- Menu 4-->
                <androidx.cardview.widget.CardView
                    android:id="@+id/store2_menu4"
                    android:layout_width="match_parent"
                    android:layout_height="124dp"
                    android:layout_margin="10dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="15dp">

                    <ImageView
                        android:id="@+id/add_to_chart_24"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="330dp"
                        android:layout_marginTop="90dp"
                        app:srcCompat="@drawable/add_to_cart" />

                    <ImageView
                        android:id="@+id/store2_menu4_profile"
                        android:layout_width="107dp"
                        android:layout_height="114dp"
                        android:layout_margin="5dp"
                        android:background="@color/white"
                        android:elevation="3dp"
                        android:src="@drawable/store2_menu4" />

                    <TextView
                        android:id="@+id/store2_menu4_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="130dp"
                        android:paddingTop="5dp"
                        android:text="@string/store2_menu4_title"
                        android:textColor="@color/black"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="130dp"
                        android:paddingTop="30dp"
                        android:text="@string/store2_menu4_description" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="130dp"
                        android:paddingTop="90dp"
                        android:text="@string/store2_menu4_price" />

                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp" />

            </LinearLayout>
        </ScrollView>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="265dp"
            android:background="@color/white">

            <ImageButton
                android:id="@+id/store2_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@android:color/transparent"
                android:src="@drawable/baseline_arrow_back_24"
                android:layout_marginTop="3dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:contentDescription="BACK" />

            <ImageView
                android:id="@+id/store2_search"
                android:layout_width="77dp"
                android:layout_height="51dp"
                android:layout_marginTop="3dp"
                android:layout_marginRight="3dp"
                android:src="@drawable/search"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/store2_profile"
                android:layout_width="84dp"
                android:layout_height="91dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="52dp"
                android:src="@drawable/store2_ice_cream"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/store2_fav"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="148dp"
                android:src="@drawable/fav"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/store2_duration"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="172dp"
                android:src="@drawable/duration"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/store2_pickup"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="196dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/pickup" />

            <ImageView
                android:id="@+id/store2_location"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="220dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/location" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="112dp"
                android:layout_marginTop="88dp"
                android:text="Malone's Cones"
                android:textColor="@color/q_less__color"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/store2_fav_textView"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginStart="40dp"
                android:layout_marginTop="148dp"
                android:paddingTop="2dp"
                android:text="3.4"
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/store2_duration_textView"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginStart="40dp"
                android:layout_marginTop="172dp"
                android:paddingTop="2dp"
                android:text="Pickup in 8 minutes"
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/store2_pickup_textView"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginStart="40dp"
                android:layout_marginTop="196dp"
                android:paddingTop="2dp"
                android:text="0.8km away"
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/store2_location_textView"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginStart="40dp"
                android:layout_marginTop="220dp"
                android:paddingTop="2dp"
                android:text="7 Changi Business Park Central, Singapore 494372"
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/store2_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="60dp"
                android:layout_marginTop="154dp"
                android:text="| 76 ratings"
                android:textSize="10sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:backgroundTint="@color/q_less__color"
            android:visibility="visible"
            app:cardCornerRadius="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingTop="20dp"
                android:text="View Cart"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/current_cart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="85dp"
                android:paddingTop="20dp"
                android:text="(X item)"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/total_cost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="310dp"
                android:paddingTop="20dp"
                android:text="$XX.XX"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold" />

        </androidx.cardview.widget.CardView>

    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>