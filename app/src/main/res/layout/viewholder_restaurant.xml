<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/restaurantCard"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:layout_marginStart="10dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/rest_pic"
            android:layout_width="107dp"
            android:layout_height="114dp"
            android:layout_margin="5dp"
            android:background="@color/white"
            android:elevation="3dp"
            android:src="@drawable/store1_burger"
            android:visibility="visible" />

        <TextView
            android:id="@+id/rest_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="130dp"
            android:paddingTop="5dp"
            android:text="@string/store1_name"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/rest_des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="150dp"
            android:paddingTop="30dp"
            android:text="@string/store1_short_details"
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="130dp"
            android:paddingTop="55dp"
            android:text="Pick up        minutes"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/rest_pick_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="175dp"
            android:paddingTop="55dp"
            android:text="XX"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="19dp"
            android:layout_height="19dp"
            android:layout_marginLeft="130dp"
            android:layout_marginTop="30dp"
            app:srcCompat="@drawable/yellow_star" />

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>