<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <View
        android:id="@+id/line_after_no_cutlery"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/cutlery_switch"
        android:layout_marginTop="-50dp"
        android:background="@android:color/darker_gray"
        tools:ignore="DuplicateIds" />

    <TextView
        android:id="@+id/text_pickup_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:padding="10dp"
        android:text="Restaurant"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/text_pickup_address_value"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/text_pickup_address"
        android:layout_marginStart="30dp"
        android:layout_marginTop="6dp"
        android:paddingTop="20dp"
        android:text="Address" />
    <TextView
        android:id = "@+id/cutleryText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No Cutlery"
        android:layout_below="@id/text_pickup_address_value"
        android:layout_marginTop="180dp"
        android:padding="16dp"
        android:textStyle="bold"/>

    <View
        android:id="@+id/line_before_subtotal"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/cutlery_switch"
        android:layout_marginTop="33dp"
        android:background="@android:color/darker_gray" />

    <TextView
        android:id = "@+id/cutleryDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thank you for helping to reduce waste!"
        android:layout_below="@id/cutleryText"
        android:paddingLeft="16dp"/>


    <Switch
        android:id="@+id/cutlery_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_pickup_address_value"
        android:layout_marginTop="180dp"
        android:padding="16dp"
        android:gravity="right"
        android:layout_alignParentRight="true"
        android:contentDescription="Toggle cutlery inclusion with order"/>

    <TextView
        android:id="@+id/text_order_summary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/cutlery_switch"
        android:layout_marginTop="-212dp"
        android:padding="16dp"
        android:text="Order Summary"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/text_selected_items"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_order_summary"
        android:layout_marginTop="34dp"
        android:padding="16dp"
        android:text="" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_place_order"
        style="@style/button"
        android:layout_width="450dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_selected_items"
        android:layout_marginTop="347dp"
        android:background="@drawable/rounded_button"
        android:padding="20dp"
        android:text="Place Order"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textViewSubtotal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/cutlery_switch"
        android:layout_marginTop="23dp"
        android:padding="16dp"
        android:text="Subtotal"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium" />


    <TextView
        android:id="@+id/subtotalValue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/cutlery_switch"
        android:layout_marginTop="23dp"
        android:gravity="right"
        android:padding="16dp"
        android:text="$XX" />

    <TextView
        android:id="@+id/textViewServiceFee"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewSubtotal"
        android:layout_marginTop="-25dp"
        android:padding="16dp"
        android:text="Service Fee"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium" />
    <TextView
        android:id = "@+id/serviceFeeValue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewSubtotal"
        android:layout_marginTop="-25dp"
        android:padding="16dp"
        android:text="$XX"
        android:gravity="right"/>


    <TextView
        android:id="@+id/textViewTotal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewServiceFee"
        android:layout_marginTop="99dp"
        android:padding="16dp"
        android:text="Order Total"
        android:textSize="18sp"
        android:textStyle="bold" />
    <TextView
        android:id = "@+id/totalValue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewServiceFee"
        android:layout_marginTop="99dp"
        android:padding="16dp"
        android:text="$XX"
        android:gravity="right"/>

    <ImageView android:id="@+id/vector_ek2"
        android:src="@drawable/vector_ek2"
        android:contentDescription="vector_ek2"
        android:paddingTop="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="54dp"
        android:layout_width="13.49dp"
        android:layout_height="90dp" />

    <ImageView android:id="@+id/vector_ek3"
        android:src="@drawable/vector_ek3"
        android:contentDescription="vector_ek3"
        android:paddingTop="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="28dp"
        android:layout_width="12dp"
        android:layout_height="80dp"
        android:textAlignment="textStart"/>

    <ImageView
        android:id="@+id/vector_ek4"
        android:layout_width="15dp"
        android:layout_height="90dp"
        android:layout_marginStart="10dp"
        android:paddingTop="3dp"
        android:contentDescription="vector_ek4"
        android:src="@drawable/vector_ek4" />

    <View
        android:id="@+id/line_before_text_order_summary"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/cutlery_switch"
        android:layout_marginTop="-209dp"
        android:background="@android:color/darker_gray" />

    <View
        android:id="@+id/line_before_orderTotal"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/cutlery_switch"
        android:layout_marginTop="207dp"
        android:background="@android:color/darker_gray" />

    <ImageButton
        android:id="@+id/image_button_example"
        android:layout_width="27dp"
        android:layout_height="34dp"
        android:layout_marginStart="20dp"
        android:background="@color/white"
        android:contentDescription="Back"
        android:onClick="yourButtonClickMethod"
        android:paddingTop="10dp"
        android:src="@drawable/baseline_arrow_back_24" />


</RelativeLayout>